<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MiControl" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorUno</item>
        <item name="colorPrimaryVariant">@color/colorDos</item>
        <item name="colorOnPrimary">@color/colorUno</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/colorUno</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorUno</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MySpinnerDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@drawable/fondo_degradado2</item>
    </style>

    <style name="SlideActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorDos</item>
    </style>

    <style name="DialogTheme.Cafe" parent="Theme.AppCompat.Light.Dialog">
