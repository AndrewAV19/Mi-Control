<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ver_t"
    android:background="@drawable/fondo_degradado"
    tools:context=".VerTaller">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView4"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="31dp"
        android:autoSizeTextType="uniform"
        android:text="@string/EditarTaller"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />


    <EditText
        android:id="@+id/titulo"
        android:layout_width="322dp"
        android:layout_height="48dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="-50dp"
        android:ems="10"
        android:hint="@string/ingresaTitulo"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/informacion"
        android:layout_width="322dp"
        android:layout_height="98dp"
        android:layout_below="@+id/titulo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="-50dp"
        android:ems="10"
        android:hint="@string/ingresaInformacion"
        android:inputType="textMultiLine"
        android:text=""
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/precio"
        android:layout_width="322dp"
        android:layout_height="48dp"
        android:layout_below="@+id/informacion"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="@string/ingresaPrecioServicio"
        android:inputType="phone"
        android:text=""
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp" />


    <ImageView
        android:id="@+id/imagenTaller"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/precio"
        android:layout_marginTop="50dp"
        android:layout_marginStart="80dp"
        android:src="@drawable/baseline_image_24" />



    <ImageButton
        android:id="@+id/aÃ±adir"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/imagenTaller"
        android:layout_marginStart="90dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/baseline_edit_24"
        />

    <ImageButton
        android:id="@+id/eliminar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/imagenTaller"
        android:layout_marginStart="180dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/baseline_delete_24"
        />

    <ImageButton
        android:id="@+id/pdf"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/imagenTaller"
        android:layout_marginStart="270dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/baseline_picture_as_pdf_24"
        />


</RelativeLayout>