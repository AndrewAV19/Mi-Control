<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ConfiguracionFragment"
    android:background="@drawable/fondo_degradado"
    android:padding="16dp">





    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat"
        android:text="@string/configuracion"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titulo"
        android:layout_marginTop="55dp"
        android:src="@drawable/baseline_color_lens_24"/>
    <TextView
            android:id="@+id/colorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cambiarColor"
            android:layout_marginTop="50dp"
            android:layout_marginStart="35dp"
            android:textStyle="normal|bold"
            android:textColor="@color/white"
            android:layout_below="@id/titulo"
            android:textSize="22sp" />

    <TextView
        android:id="@+id/image_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seleccionaImagen"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:layout_below="@id/colorTitle"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imagenLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/image_title"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/baseline_image_24" />

    <TextView
        android:id="@+id/nombre_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NOMBRE"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:layout_below="@id/imagenLogo"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="322dp"
        android:layout_height="48dp"
        android:layout_below="@+id/nombre_title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="-50dp"
        android:ems="10"
        android:hint="@string/escribeNombre"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/aÃ±adir"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/image_title"
        android:layout_marginStart="250dp"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/baseline_edit_24"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="65dp"
        android:src="@drawable/baseline_backup_24"/>

    <TextView
        android:id="@+id/backup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Realizar Backup"
        android:layout_marginTop="60dp"
        android:layout_marginStart="35dp"
        android:textColor="@color/white"
        android:textStyle="normal|bold"
        android:layout_below="@id/name"
        android:textSize="22sp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="110dp"
        android:src="@drawable/baseline_backup_24"/>

    <TextView
        android:id="@+id/ingresarbackup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa Backup"
        android:layout_marginTop="110dp"
        android:layout_marginStart="35dp"
        android:textColor="@color/white"
        android:textStyle="normal|bold"
        android:layout_below="@id/name"
        android:textSize="22sp" />


    </RelativeLayout>


